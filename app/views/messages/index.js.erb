var initialScrollTop = $('#messages-list').scrollTop();
$('#messages-list tbody').prepend('<%= escape_javascript render(@messages) %>');
$('.pagination').replaceWith('<%= escape_javascript will_paginate(@messages) %>');
var itemsPerPage = '<%= MessagesController::PER_PAGE %>'
var itemsHeight = $("#messages-list table tbody tr:first").outerHeight();
for (var i = 1; i < itemsPerPage; i++) {
	itemsHeight += $("#messages-list table tbody tr:eq("+i+")").outerHeight();
};
var scrollTop = initialScrollTop + itemsHeight;
$('#messages-list').scrollTop(scrollTop);