<div class="header">
	<div class="container">
		<div class="row">
			<div class="col-md-3 col-sm-4 col-xs-4">
				<%=  link_to root_path do %>
					<h1>Junction</h1>
				<% end %>
			</div>
			<div class="col-md-9 col-sm-8 col-xs-8">
				<ul class="nav nav-tabs pull-right">
					<% if user_signed_in? %>
						<li>
							<%= link_to conversations_path, class: "button" do %>
								Messages <% if unread_messages > 0 %>
									<span id="messages-notification" class="badge"><%= unread_messages %></span>
								<% else %>
									<span id="messages-notification" class="badge hidden"></span>
								<% end %>
							<% end %>
						</li>
						<li><%= link_to 'Users', users_path, class: "button" %></li>
						<li><%= link_to 'Me', user_path(current_user), class: "button" %></li>
						<li class="dropdown">
							<a class="dropdown-toggle button" data-toggle='dropdown'><%= current_user.first_name+' '+current_user.last_name %> <b class="caret"></b></a>
							<ul class="dropdown-menu dropdown-menu-right">
								<li><%= link_to 'Edit profile', edit_user_registration_path, class: "button" %></li>
								<li><%= link_to 'Exit', destroy_user_session_path, :method => :delete, id: "logout_link", class: "button" %></li>
							</ul>
						</li>
					<% else %>
						<% unless current_page?(:controller => 'registrations', :action => "new") %>
							<li><%= link_to 'Sign Up', new_user_registration_path, id: "signup_link", class: "button" %></li>
						<% end %>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
</div>